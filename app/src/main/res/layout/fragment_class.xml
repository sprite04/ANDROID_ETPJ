<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingHorizontal="20dp">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alternate_gothic"
        android:gravity="center"

        android:text="Add Class"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:typeface="serif"
        android:text="Class Name"
        android:layout_marginStart="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:typeface="serif"
        android:background="@drawable/background_border_white"
        android:text="linh"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:typeface="serif"
        android:text="Capacity"
        android:layout_marginStart="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_border_white"
        android:typeface="serif"
        android:text="linh"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:text="Start Date"
        android:typeface="serif"
        android:layout_marginStart="15dp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border_white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:text="hhhhhhhhhhhh"

            android:textSize="18sp"
            android:layout_toStartOf="@id/img_start_date"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/img_start_date"
            android:layout_alignParentEnd="true"
            android:src="@drawable/calendar"
            android:padding="5dp"/>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:typeface="serif"
        android:text="End Date"
        android:layout_marginStart="15dp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border_white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hhhhhhhhhhhh"
            android:id="@+id/tv_text"
            android:typeface="serif"
            android:textSize="18sp"
            android:layout_toStartOf="@id/img_end_date"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/img_end_date"
            android:layout_alignParentEnd="true"
            android:src="@drawable/calendar"
            android:padding="5dp"/>


    </RelativeLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:layout_gravity="end">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_700"
            android:id="@+id/btn_close"
            android:typeface="serif"
            android:text="Save"
            android:textAllCaps="false"
            android:layout_marginEnd="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF2222"
            android:id="@+id/btn_submit"
            android:typeface="serif"
            android:text="Back"
            android:textAllCaps="false" />


    </LinearLayout>

</LinearLayout>